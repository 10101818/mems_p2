<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>扫描二维码页面</title>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link type="text/css" rel="stylesheet" href="css/materialize.css"  media="screen,projection"/>
	<link type="text/css" rel="stylesheet" href="css/style.css"  media="screen,projection"/>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="js/lib.js" type="text/javascript" charset="utf-8" async defer></script>
</head>
<body>
	<div class="container">
		<div class="row top-row">
			<div class="header">
				<div class="row">
					<div class="col s9">
						<span>设备管理系统</span>
						<span>
							<i class="material-icons icon-header">settings</i>
						</span>
					</div>
					<div class="col s3">
						<span>
							<i class="material-icons icon-header">face</i>
						</span>
						<span>Jin</span>
					</div>
				</div>
			</div>
			<div class="sub-menu" style="height: 100%; background: #272727">
				<div style="height: 1px;"></div>
				<div id="scan-qr" class="scan-area">
					<div class="scan-epic">
						<img src="img/corner.png" style="width: 100%;height: 183px;">
					</div>
					<div class="scan-btn">
						<div class="waves-effect waves-light btn" style="border-radius: 25px;background:#965454; width: 90px;" onclick="navigateTo('report_repair_page')">点击扫码</div>
						<div class="waves-effect waves-light btn" style="border-radius: 25px;background:#965454; width: 90px;">从相册选择图片</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script type="text/javascript">
    	  $(document).ready(function(){
		    $('select').formSelect();
		    $('.carousel').carousel({
		    	fullwidth: true
		    });
		  });
		var $info=$('#info'),$zhiwen=$('#zhiwen'),$line=$('#line');
		$(function(){
			$zhiwen.click(function(){
				$info.stop().text('扫描中...');
				$line.stop().show();
				document.querySelector('#line').addEventListener('webkitAnimationEnd', function () {
		            $info.text('扫描完成');
					$line.hide();
					setTimeout(function(){
						$info.text('');
						//callback
					},400);
		        },false);
			});
		});
    </script>
</body>
</html>