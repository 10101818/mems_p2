<script>
    //获取入库零件
    function GetComponent4Inbound(component, index) {
        SetPageWaiting(true);
        $.get('@Url.Action("GetComponent4Inbound", "PurchaseOrder")', {
            purchaseOrderID: PurchaseOrderDetailVue.PurchaseOrder.ID,
            componentID: component.Component.ID
